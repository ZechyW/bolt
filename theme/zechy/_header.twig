    <header class="row">
      <!-- Top bar -->
      <nav class="top-bar" data-topbar role="navigation">
          <ul class="title-area">
              <li class="name"><h1><a href="{{ paths.root }}">Home</a></h1></li>
              <li class="toggle-topbar menu-icon"><a href="#">â˜° Menu</a></li>
